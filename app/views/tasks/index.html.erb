<h1>Your Tasks</h1>

<% @tasks.each do |task| %>
<ul class = 'list-inline'>
  <li>
    <%= link_to task_path(task) do %>
      <h3><%= task.name %></h3>
    <% end %>
    <%= link_to 'Update', edit_task_path(task) %>
    <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Are you sure?" } %>
  </li>
</ul>
<% end %>

<%= link_to 'Add a new task', new_task_path %>
